;; Vector sum

(%testspec
 (%tags bench))

(module
  (extern time-s () -> float)

  (define (add-vectors xs ys)
    (kernel ((x xs) (y ys)) (+ x y)))
  
  (define (bench_length len)
    (let ((xs (make-vector len 1.0))
          (ys (make-vector len 1.0)))
      (let* ((start (time-s))
             ;;(sum (add-vectors xs ys))
             (sum (kernel ((x xs) (y ys)) (+ x y)))
             (stop (time-s)))
		(- stop start))))
    
  (define (main)
    (for (i 1 90)
    ;;(for (i 1 17)
	  (let ((time 0.0))
		(for (j 0 10)
		  (set! time (+ time (bench_length (* i 1000000)))))
		(print i)
		(print "\t")
		(println (/ time 10))))
    (return 0)))
